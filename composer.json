{
  "name": "digitalkaoz/typehint-to-docblock",
  "description": "converts typehints to docblocks and vice versa",
  "minimum-stability" : "dev",
  "prefer-stable": true,
  "require": {
    "php" :                        ">=5.5",
    "nikic/php-parser":            "~1.4",
    "symfony/console":             "~2.3",
    "symfony/finder":              "~2.3",
    "gossi/docblock":              "~1.5",
    "symfony/filesystem":          "~2.7",
    "phpdocumentor/type-resolver": "~0.1",
    "pimple/pimple":               "~3.0",
    "psr/log":                     "~1.0"
  },
  "require-dev": {
    "phpspec/phpspec":             "^2"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Robert Sch√∂nthal",
      "email": "robert.schoenthal@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "DigitalKaoz\\TTD\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "spec\\DigitalKaoz\\TTD\\": "spec"
    }
  },
  "bin": ["bin/typehint-to-docblock"],
  "scripts": {
    "test" : "vendor/bin/phpspec run -fpretty -vv"
  }
}
